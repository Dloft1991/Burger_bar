<h1>Burgers!</h1>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="hungry">Eaten?</label><br>
    <input type="radio" name="hungry" value="1" checked> Eaten!<br>
    <input type="radio" name="hungry" value="0"> Try It!
  </div>

  <button type="submit">Add Burger</button>
</form>

<h2>Burgers You Can Eat!</h2>
<div class="bun">
  <div class="eat">
  <ul>
  {{#each burgers}}
    {{#unless hungry}}
      {{> burgers/burger-block hunger=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>
</div>


<h2>Burgers You Have Eaten!</h2>

<div class="bun">
  <div class="eaten">
  <ul>
  {{#each burgers}}
    {{#if hungry}}
      {{> burgers/burger-block hunger=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>



